<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/cart_objectImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:padding="3dp" />



            <TextView
                android:id="@+id/cart_objectName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_weight="1"
                android:text="NAME"
                android:textSize="20dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs"
                android:textSize="30dp" />
            <TextView
                android:id="@+id/cart_objectPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="30dp" />


        </LinearLayout>


    </LinearLayout>

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"

        app:layout_constraintTop_toBottomOf="@+id/root">
       <Button
           android:id="@+id/delete_item"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginHorizontal="20dp"
           android:layout_weight="1"
           android:text="Delete"
           />


       <ImageButton
            android:id="@+id/decrease_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="3dp"
            android:background="@drawable/rounded_button"
            android:padding="10dp"
            android:src="@mipmap/remove_24px_outlined" />

       <TextView
           android:id="@+id/qty"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginHorizontal="3dp"
           android:background="@drawable/edittext_layout"
           android:inputType="number"
           android:padding="12dp"
           android:text="1" />

       <ImageButton
           android:id="@+id/increase_qty"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginHorizontal="3dp"
           android:background="@drawable/rounded_button"
           android:padding="10dp"
           android:src="@mipmap/add_24px_outlined" />

   </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>